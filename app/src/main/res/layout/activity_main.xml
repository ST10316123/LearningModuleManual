<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/onepiece"
        android:layout_width="337dp"
        android:layout_height="214dp"
        android:src="@drawable/oip" />

    <TextView
        android:id="@+id/hellomsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/maser"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/maser"/>

            <ImageView
                android:id="@+id/colorful_background"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/colorful_background"/>

            <ImageView
                android:id="@+id/oip"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/oip"/>

            <ImageView
                android:id="@+id/noclue"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/noclue"/>

            <ImageView
                android:id="@+id/addfjk"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/addfjk"/>

            <ImageView
                android:id="@+id/car1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/car1"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
