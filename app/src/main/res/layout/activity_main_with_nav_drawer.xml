<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_layout"
        app:menu="@menu/navigation_menu" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/nav_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <ImageView
            android:id="@+id/onepiece"
            android:layout_width="337dp"
            android:layout_height="214dp"
            android:src="@drawable/oip" />

        <TextView
            android:id="@+id/hellomsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Hello World!" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/maser"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/maser" />

                <ImageView
                    android:id="@+id/colorful_background"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/colorful_background" />

                <ImageView
                    android:id="@+id/oip"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/oip" />

                <ImageView
                    android:id="@+id/noclue"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/noclue" />

                <ImageView
                    android:id="@+id/addfjk"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/addfjk" />

                <ImageView
                    android:id="@+id/car1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/car1" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>